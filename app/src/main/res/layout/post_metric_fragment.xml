<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostMetricFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userInfoView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/emailField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="email" />

        <Button
            android:id="@+id/getUserButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Get user" />

        <EditText
            android:id="@+id/emailField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="email" />

        <EditText
            android:id="@+id/deviceIdField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="device id" />

        <EditText
            android:id="@+id/heartRateField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="heart rate" />

        <Button
            android:id="@+id/postMetricButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Post Metric" />

    </LinearLayout>

</FrameLayout>